<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="price"
            type="int" />

        <variable
            name="totalCount"
            type="int" />

        <variable
            name="onAllCheckClick"
            type="kotlin.jvm.functions.Function1" />

        <variable
            name="onOrderClick"
            type="kotlin.jvm.functions.Function0" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/gray_555555"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_check_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/selector_checkbox_cart_total"
                android:onCheckedChanged="@{(compoundButton, checked) -> onAllCheckClick.invoke(checked)}"
                android:text="@string/cart_select_all_of_page"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@{@string/product_price(price)}"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="345,600원" />

        <TextView
            android:id="@+id/tv_order_product"
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:background="@color/blue_green_04c09e"
            android:gravity="center"
            android:onClick="@{() -> onOrderClick.invoke()}"
            android:text="@{@string/cart_order_btn(totalCount)}"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="주문하기(0)" />
    </LinearLayout>

</layout>
